<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/stepIcon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:src="@drawable/ic_step_icon" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/white"
            android:elevation="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:background="@color/text_primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/centerYellow1"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/material_core_yellow"
            android:elevation="@dimen/_1sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/centerYellow2"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/material_core_yellow"
            android:elevation="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/centerYellow1"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/centerYellow3"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:background="@color/material_core_yellow"
            android:elevation="@dimen/_1sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/centerYellow2"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/centerYellow4"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:background="@color/material_core_yellow"
            android:elevation="@dimen/_1sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/centerYellow3"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/centerYellow5"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:background="@color/material_core_yellow"
            android:elevation="@dimen/_1sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/centerYellow4"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:background="@color/white"
            android:elevation="@dimen/_1sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/stepTitleCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <TextView
            android:id="@+id/stepTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

    </androidx.cardview.widget.CardView>

</LinearLayout>