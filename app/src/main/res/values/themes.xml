<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Makes360YourITPartner" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Style for Overflow Menu (Three-dot icon) -->
        <item name="actionOverflowButtonStyle">@style/OverflowMenuStyle</item>
    </style>

    <!-- Application theme extending the base theme -->
    <style name="Theme.Makes360YourITPartner" parent="Base.Theme.Makes360YourITPartner" />

    <!-- Style for Overflow Menu Icon -->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <!-- Tint color for the three-dot icon -->
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="MenuTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>